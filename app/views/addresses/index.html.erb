<div class="container">
  <h1>Addresses</h1>
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Country</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.address %></td>
          <td><%= address.city %></td>
          <td><%= address.state %></td>
          <td><%= address.country %></td>
          <td>
            <%= link_to 'Show', address, class: 'btn btn-primary btn-sm' %>
          </td>
          <td>
            <%= link_to 'Edit', edit_address_path(address), class: 'btn btn-secondary btn-sm' %>
          </td>
          <td>
            <%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Address', new_address_path, class: 'btn btn-success' %>
</div>