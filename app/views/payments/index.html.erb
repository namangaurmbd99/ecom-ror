<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Order ID</th>
      <th>Amount</th>
      <th>Payment Date</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.id %></td>
        <td><%= payment.order_id %></td>
        <td><%= number_to_currency(payment.amount) %></td>
        <td><%= payment.payment_date.strftime('%B %d, %Y') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
